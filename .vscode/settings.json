{
  "editor.formatOnSave": true,
  "eslint.enable": false,
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.formatOnSave": false
  },
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "prettier.documentSelectors": ["**/*.astro"],
  "[astro]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.requireConfig": true,
  "cSpell.allowCompoundWords": true,
  "cSpell.words": [
    "amap",
    "antfu",
    "astrojs",
    "attributify",
    "bilibili",
    "bumpp",
    "changelogithub",
    "destructurable",
    "iconify",
    "pnpm",
    "shiki",
    "unocss",
    "unplugin",
    "vite",
    "vitejs",
    "vitesse",
    "vueuse"
  ]
}
